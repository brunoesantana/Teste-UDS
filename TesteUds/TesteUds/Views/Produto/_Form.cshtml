@model ProdutoViewModel

@Html.AntiForgeryToken()

@if (!ViewData.ModelState.IsValid)
{
    <div class="row">
        <div class="col-md-12">
            <div class="alert alert-danger alert-dismissible" role="alert">
                <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                @Html.ValidationSummary()
            </div>
        </div>
    </div>
}

@Html.HiddenFor(m => m.Id)

<div class="row">
    <div class="form-group col-md-4">
        @Html.LabelFor(m => m.Codigo)
        @Html.TextBoxFor(m => m.Codigo, new { @class = "form-control", maxlength = "3" })
        @Html.ValidationMessageFor(m => m.Codigo)
    </div>
    <div class="form-group col-md-4">
        @Html.LabelFor(m => m.Nome)
        @Html.TextBoxFor(m => m.Nome, new { @class = "form-control", maxlength = "100" })
        @Html.ValidationMessageFor(m => m.Nome)
    </div>
    <div class="form-group col-md-4">
        @Html.LabelFor(m => m.PrecoUnitario)
        @Html.TextBoxFor(m => m.PrecoUnitario, new { @class = "form-control", placeholder = "0,00"})
        @Html.ValidationMessageFor(m => m.PrecoUnitario)
    </div>
    <hr />
    <div class="form-group col-md-2 col-md-offset-8">
        <button type="button" class="btn btn btn-secundary" onclick="window.location.href = '/Produto'">Cancelar</button>
    </div>
    <div class="form-group col-md-2">
        <button class="btn btn-primary" type="submit">Salvar</button>
    </div>
</div>